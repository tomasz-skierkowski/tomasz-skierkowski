@model BusinessLogic.Recipe

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="Ingredients[0].Product.Id"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Ingredients[0].Product.Id
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Ingredients[0].Product.Name"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Ingredients[0].Product.Name
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Ingredients[0].Product.ProductCategory"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Ingredients[0].Product.ProductCategory
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Ingredients[0].Product.UnitOfMeasure"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Ingredients[0].Product.UnitOfMeasure
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Ingredients[0].Quantity"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Ingredients[0].Quantity
        </dd>
        <dd class = "col-sm-10">
        <div>
            Ingredients
		    </div>

            <table class="table table-bordered table-striped">
                <thead>
                <tr>
                   @* <th>
                        //id placeholder
                    </th>  *@                
                    <th>
                        <label asp-for="Ingredients[0].Product.Name" class="control-label"></label>
                    </th>
                    <th>
                        <label asp-for="Ingredients[0].Product.ProductCategory" class="control-label"></label>
                    </th>
                    <th>
                        <label asp-for="Ingredients[0].Product.UnitOfMeasure" class="control-label"></label>
                    </th>
                    <th>
                        <label asp-for="Ingredients[0].Quantity" class="control-label"></label>
                    </th>
                </tr>
                </thead>
                <tbody>
                @for (var i = 0; i < Model.Ingredients.Count; i++)
                {
                    <tr>
                        @*<td>
                            <input type="hidden" asp-for="Ingredients[i].Product.Id" class="form-control"/>
                        </td>*@
                        <td>
                            @Model.Ingredients[i].Product.Name
                            <input type="hidden" asp-for="Ingredients[i].Product.Name" class="form-control"/>
                        </td>
                        <td>
                            @Model.Ingredients[i].Product.ProductCategory
                            <input type="hidden" asp-for="Ingredients[i].Product.ProductCategory" class="form-control"/>
                        </td>
                        <td>
                            @Model.Ingredients[i].Product.UnitOfMeasure
                            <input type="hidden" asp-for="Ingredients[i].Product.UnitOfMeasure" class="form-control"/>
                        </td>
                        <td>
                            @Model.Ingredients[i].Quantity
                            <input type="hidden" asp-for="Ingredients[i].Quantity" class="form-control"/>
                        </td>
                        
                    </tr>
                }
                </tbody>
            </table>
            </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-success" asp-action="Index"><i class="bi bi-arrow-left"></i> Back to List </a>
    </form>
</div>
