@model BusinessLogic.Recipe

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="@Model.Name" value="@Model.Name" type="hidden" />
            <input asp-for="@Model.Description" value="@Model.Description" type="hidden" />
            <input asp-for="@Model.CookingTimeInMinutes" value="@Model.CookingTimeInMinutes" type="hidden" />
            <input asp-for="@Model.IsVegeterian" value="@Model.IsVegeterian" type="hidden" />
            
            <div class="form-group">
                <label asp-for="Ingredients[0].Product.Id" class="control-label"></label>
                <input asp-for="Ingredients[0].Product.Id" class="form-control" />
                <span asp-validation-for="Ingredients[0].Product.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredients[0].Product.Name" class="control-label"></label>
                <input asp-for="Ingredients[0].Product.Name" class="form-control" />
                <span asp-validation-for="Ingredients[0].Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredients[0].Product.ProductCategory" class="control-label"></label>
                <input asp-for="Ingredients[0].Product.ProductCategory" class="form-control" />
                <span asp-validation-for="Ingredients[0].Product.ProductCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredients[0].Product.UnitOfMeasure" class="control-label"></label>
                <input asp-for="Ingredients[0].Product.UnitOfMeasure" class="form-control" />
                <span asp-validation-for="Ingredients[0].Product.UnitOfMeasure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredients[0].Quantity"></label>
                <input asp-for="Ingredients[0].Quantity" />
                <span asp-validation-for="Ingredients[0].Quantity" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
            </div>
        </form>
    </div>
</div>

