@model BusinessLogic.Recipe

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="Id"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Id
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="CookingTimeInMinutes"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.CookingTimeInMinutes
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="IsVegeterian"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.IsVegeterian
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Description"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-success" asp-controller="Recipes" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-arrow-left"></i> Back to List </a>
    </form>
</div>
