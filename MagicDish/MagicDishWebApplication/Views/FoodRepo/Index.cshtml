@model IEnumerable<BusinessLogic.ProductQuantity>


@{
    ViewData["Title"] = "Index";
}

<h1>Welcome to your RepositoryName</h1>
<br />


<p>
    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-circle"></i> Add product to your repository</a>
</p>
<br />
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            @*<th>
                <label asp-for="First().Product.Id"></label>
            </th>*@
            <th>
                <label asp-for="First().Product.Name"></label>
            </th>
            <th>
                <label asp-for="First().Product.ProductCategory"></label>
            </th>
            <th>
                <label asp-for="First().Quantity"></label>
            </th>
            <th>
                <label asp-for="First().Product.UnitOfMeasure"></label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var product in Model) {
        <tr>
            @*<td>
                @product.Product.Id
            </td>*@
            <td>
                @product.Product.Name
            </td>
            <td>
                @product.Product.ProductCategory
            </td>
            <td>
                @product.Quantity
            </td>
            <td>
                @product.Product.UnitOfMeasure
            </td>
            <td>
               <div class="w-75 btn-group" role="group">
                        <a asp-controller="FoodRepo" asp-action="Edit" asp-route-id="@product.Product.Id"
                        class="btn btn-primary mx-1"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="FoodRepo" asp-action="Details" asp-route-id="@product.Product.Id"
                        class="btn btn-success mx-1"> <i class="bi bi-card-list"></i> Details</a>
                        <a asp-controller="FoodRepo" asp-action="Delete" asp-route-id="@product.Product.Id"
                        class="btn btn-danger mx-1"> <i class="bi bi-trash-fill"></i> Delete</a>
					</div>
            </td>
        </tr>
}
    </tbody>
</table>
